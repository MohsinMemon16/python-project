# AI SHOPPING ASSISTANT

# Product data (List of Dictionaries)
products = [
    {"id": 1, "name": "Laptop", "category": "Electronics", "price": 80000},
    {"id": 2, "name": "Headphones", "category": "Electronics", "price": 3000},
    {"id": 3, "name": "Shoes", "category": "Fashion", "price": 4500},
    {"id": 4, "name": "T-Shirt", "category": "Fashion", "price": 2000},
    {"id": 5, "name": "Smartphone", "category": "Electronics", "price": 60000}
]

cart = []  # Shopping cart


# Function to display products
def show_products():
    print("\nAvailable Products:")
    for product in products:
        print(f"{product['id']}. {product['name']} - {product['category']} - Rs.{product['price']}")


# Function to search product
def search_product():
    keyword = input("\nEnter product name or category to search: ").lower()
    found = False
    for product in products:
        if keyword in product["name"].lower() or keyword in product["category"].lower():
            print(f"{product['id']}. {product['name']} - Rs.{product['price']}")
            found = True
    if not found:
        print("No product found!")


# Function to recommend products
def recommend_product():
    choice = input("\nDo you want recommendation by (budget/category)? ").lower()

    if choice == "budget":
        budget = int(input("Enter your budget: Rs. "))
        print("Recommended products:")
        for product in products:
            if product["price"] <= budget:
                print(f"{product['name']} - Rs.{product['price']}")

    elif choice == "category":
        category = input("Enter category: ").lower()
        print("Recommended products:")
        for product in products:
            if product["category"].lower() == category:
                print(f"{product['name']} - Rs.{product['price']}")

    else:
        print("Invalid choice!")


# Function to add product to cart
def add_to_cart():
    show_products()
    pid = int(input("\nEnter product ID to add to cart: "))
    for product in products:
        if product["id"] == pid:
            cart.append(product)
            print(f"{product['name']} added to cart!")
            return
    print("Invalid product ID!")


# Function to show cart and total bill
def show_cart():
    if not cart:
        print("\nYour cart is empty!")
        return

    total = 0
    print("\nYour Cart:")
    for item in cart:
        print(f"{item['name']} - Rs.{item['price']}")
        total += item["price"]

    print(f"Total Bill: Rs.{total}")


# Main Program Loop
def main():
    while True:
        print("\n--- AI SHOPPING ASSISTANT ---")
        print("1. View Products")
        print("2. Search Product")
        print("3. Get Recommendation")
        print("4. Add to Cart")
        print("5. View Cart & Bill")
        print("6. Exit")

        choice = input("Enter your choice: ")

        if choice == "1":
            show_products()
        elif choice == "2":
            search_product()
        elif choice == "3":
            recommend_product()
        elif choice == "4":
            add_to_cart()
        elif choice == "5":
            show_cart()
        elif choice == "6":
            print("Thank you for shopping!")
            break
        else:
            print("Invalid choice, try again!")


# Program execution
main()
